<%-include ('partials/header.ejs'); %>

<body>
    <%-include ('partials/navbar.ejs'); %> 

    <div class="container">
        <br>
        <h1> <%= pergunta.titulo  %> </h1>
        <p> <%= pergunta.descricao  %>  </p>
        <hr>
        <form method="POST" action="/responder">
            <h5>Responda:</h5>
            <textarea placeholder="Digite sua resposta" class="form-control" name="bodyId"></textarea>
            <br>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <br>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.bodyId %> <br></p>
                </div>
            </div>
        <% }) %> 

    </div>
</body>

<%-include ('partials/footer.ejs'); %>